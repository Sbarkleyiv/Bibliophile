<Window x:Class="BibliophileApplication.Views.UserMainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BibliophileApplication.Views"
        xmlns:mycontrols="clr-namespace:BibliophileApplication.MyControls"
        mc:Ignorable="d"
        Title="Logged in as Guest" Height="450" Width="800">
    <Grid>
        <StackPanel Orientation="Vertical">
            <GroupBox Header="User information" 
                  Margin="10"
                  Width="750" 
                  Height="320" 
                  HorizontalAlignment="Right" 
                  VerticalAlignment="Top">
                <mycontrols:UserCardControl x:Name="usercardcontrol"/>
            </GroupBox>
            <Button Width="50" Height="50" Content="Change" Click="Button_Click"/>
        </StackPanel>
    </Grid>
</Window>
